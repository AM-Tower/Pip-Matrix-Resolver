<ui version="4.0">
 <class>MainWindow</class>
 <widget class="QMainWindow" name="MainWindow">
  <property name="geometry">
   <rect><x>0</x><y>0</y><width>900</width><height>600</height></rect>
  </property>
  <property name="windowTitle">
   <string>Pip Matrix Resolver</string>
  </property>

  <!-- Central widget with QStackedWidget -->
  <widget class="QWidget" name="centralwidget">
   <layout class="QVBoxLayout" name="verticalLayout">
    <item>
     <widget class="QStackedWidget" name="stacked">
      <property name="currentIndex"><number>0</number></property>

      <!-- Main Page -->
      <widget class="QWidget" name="mainPage">
       <attribute name="title"><string>Main</string></attribute>
       <layout class="QVBoxLayout" name="mainLayout">
        <item>
         <widget class="QSplitter" name="splitter">
          <property name="orientation"><enum>Qt::Horizontal</enum></property>
          <widget class="QTableView" name="requirementsView"/>
          <widget class="QTableView" name="matrixView"/>
         </widget>
        </item>
        <item>
         <widget class="QSplitter" name="bottomSplitter">
          <property name="orientation"><enum>Qt::Horizontal</enum></property>
          <widget class="QPlainTextEdit" name="logView">
           <property name="readOnly"><bool>true</bool></property>
          </widget>
          <widget class="QProgressBar" name="progressBar"/>
         </widget>
        </item>
       </layout>
      </widget>

      <!-- History Page (promote to MatrixHistory in Designer) -->
      <widget class="QWidget" name="historyPage">
       <attribute name="title"><string>History</string></attribute>
       <layout class="QVBoxLayout" name="historyLayout">
        <item>
         <widget class="QWidget" name="matrixHistoryWidget"/>
        </item>
       </layout>
      </widget>

     </widget>
    </item>
   </layout>
  </widget>

  <!-- Menubar -->
  <widget class="QMenuBar" name="menubar">
   <property name="geometry">
